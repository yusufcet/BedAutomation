@model IEnumerable<BedAutomation.Models.Doctor>

@{
    ViewData["Title"] = "Doctors Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0"><i class="bi bi-person-badge me-2 text-primary"></i>Doctors Management</h4>
                        <p class="text-muted mb-0">Manage hospital doctors and medical staff</p>
                    </div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Add New Doctor
                    </a>
                </div>
                <div class="card-body">
                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <i class="bi bi-people fs-1 mb-2"></i>
                                    <h3 class="mb-0">@Model.Count()</h3>
                                    <p class="mb-0">Total Doctors</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <i class="bi bi-check-circle fs-1 mb-2"></i>
                                    <h3 class="mb-0">@Model.Count(d => d.IsActive)</h3>
                                    <p class="mb-0">Active Doctors</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <i class="bi bi-calendar-check fs-1 mb-2"></i>
                                    <h3 class="mb-0">@Model.Sum(d => d.Reservations.Count())</h3>
                                    <p class="mb-0">Total Assignments</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Search and Filter -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" id="doctorSearch" placeholder="Search doctors...">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">All Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                                <i class="bi bi-x-circle me-1"></i>Clear
                            </button>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <!-- Doctors Grid -->
                        <div class="row" id="doctorsGrid">
                            @foreach (var doctor in Model)
                            {
                                <div class="col-lg-4 col-md-6 mb-4 doctor-card" 
                                     data-name="@doctor.FullName.ToLower()" 

                                     data-specialization="@doctor.Specialization.ToLower()"
                                     data-status="@(doctor.IsActive ? "active" : "inactive")">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-lg bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="bi bi-person-fill text-white fs-4"></i>
                                                    </div>
                                                    <div>
                                                        <h5 class="mb-1">@doctor.DisplayName</h5>
                                                        <p class="text-muted mb-0">@doctor.Specialization</p>
                                                    </div>
                                                </div>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                        <i class="bi bi-three-dots"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" asp-action="Details" asp-route-id="@doctor.Id">
                                                            <i class="bi bi-eye me-2"></i>View Details
                                                        </a></li>
                                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@doctor.Id">
                                                            <i class="bi bi-pencil me-2"></i>Edit
                                                        </a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@doctor.Id">
                                                            <i class="bi bi-trash me-2"></i>Delete
                                                        </a></li>
                                                    </ul>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <small class="text-muted">License</small>
                                                    <div class="fw-bold">@doctor.LicenseNumber</div>
                                                </div>
                                                <div class="col-6">
                                                    <small class="text-muted">Experience</small>
                                                    <div class="fw-bold">@doctor.YearsOfExperience years</div>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                @if (doctor.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </div>

                                            <div class="row text-center">
                                                <div class="col-4">
                                                    <div class="border-end">
                                                        <div class="fs-5 fw-bold text-primary">@doctor.Reservations.Count()</div>
                                                        <small class="text-muted">Patients</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="border-end">
                                                        <div class="fs-5 fw-bold text-success">@doctor.Reservations.Count(r => r.Status == "Active")</div>
                                                        <small class="text-muted">Active</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="fs-5 fw-bold text-info">@doctor.Reservations.Count(r => r.Status == "Completed")</div>
                                                    <small class="text-muted">Completed</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="bi bi-envelope me-1 text-muted"></i>
                                                    <small class="text-muted">@doctor.Email</small>
                                                </div>
                                                <div>
                                                    <i class="bi bi-telephone me-1 text-muted"></i>
                                                    <small class="text-muted">@doctor.PhoneNumber</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-person-plus fs-1 text-muted mb-3"></i>
                            <h4 class="text-muted">No doctors found</h4>
                            <p class="text-muted mb-4">Start by adding your first doctor to the system.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Add First Doctor
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<style>
    .avatar-lg {
        width: 3.5rem;
        height: 3.5rem;
    }
    .card {
        transition: all 0.3s ease;
    }
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 25px 0 rgba(0,0,0,0.1) !important;
    }
    .border-end {
        border-right: 1px solid #dee2e6 !important;
    }
</style>

<script>
    // Search functionality
    document.getElementById('doctorSearch').addEventListener('input', function() {
        filterDoctors();
    });



    document.getElementById('statusFilter').addEventListener('change', function() {
        filterDoctors();
    });

    function filterDoctors() {
        const searchTerm = document.getElementById('doctorSearch').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value.toLowerCase();
        
        const doctorCards = document.querySelectorAll('.doctor-card');
        
        doctorCards.forEach(card => {
            const name = card.dataset.name;
            const specialization = card.dataset.specialization;
            const status = card.dataset.status;
            
            const matchesSearch = name.includes(searchTerm) || specialization.includes(searchTerm);
            const matchesStatus = !statusFilter || status === statusFilter;
            
            if (matchesSearch && matchesStatus) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }

    function clearFilters() {
        document.getElementById('doctorSearch').value = '';
        document.getElementById('statusFilter').value = '';
        filterDoctors();
    }
</script> 