@model BedAutomation.Models.Patient

@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>
                        Patient Profile
                    </h4>
                    <a asp-action="EditProfile" class="btn btn-outline-primary">
                        <i class="bi bi-pencil-square me-1"></i>
                        Edit Profile
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Kişisel Bilgiler -->
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-person me-2"></i>
                                Personal Information
                            </h5>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">Full Name</label>
                                <div class="form-control-plaintext fw-bold">
                                    @Model.FirstName @Model.LastName
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">Identity Number</label>
                                <div class="form-control-plaintext">
                                    @Model.IdentityNumber
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">Date of Birth</label>
                                <div class="form-control-plaintext">
                                    @Model.DateOfBirth.ToString("MM/dd/yyyy")
                                    <small class="text-muted">
                                        (@((DateTime.UtcNow.Year - Model.DateOfBirth.Year)) years old)
                                    </small>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">Gender</label>
                                <div class="form-control-plaintext">
                                    @(Model.Gender == "Male" ? "Male" : Model.Gender == "Female" ? "Female" : Model.Gender)
                                </div>
                            </div>
                        </div>
                        
                        <!-- İletişim Bilgileri -->
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-telephone me-2"></i>
                                Contact Information
                            </h5>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">Email</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-envelope me-2"></i>
                                    @Model.Email
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">Phone</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-phone me-2"></i>
                                    @Model.PhoneNumber
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">Address</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-house me-2"></i>
                                    @if(!string.IsNullOrEmpty(Model.Address))
                                    {
                                        @Model.Address
                                    }
                                    else
                                    {
                                        <span class="text-muted">No address information entered</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <!-- Sistem Bilgileri -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-secondary mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                System Information
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Registration Date:</strong> 
                                        @Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Patient ID:</strong> 
                                        #@Model.Id.ToString("D6")
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light">
                    <div class="row">
                        <div class="col-md-6">
                            <a asp-action="MyReservations" class="btn btn-outline-secondary">
                                <i class="bi bi-calendar-check me-1"></i>
                                My Reservations
                            </a>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-action="EditProfile" class="btn btn-primary">
                                <i class="bi bi-pencil-square me-1"></i>
                                Edit Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 