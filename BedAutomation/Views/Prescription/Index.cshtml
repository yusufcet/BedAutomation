@model IEnumerable<BedAutomation.Models.Prescription>

@{
    ViewData["Title"] = "Prescriptions";
}

<div class="container-fluid">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-pills"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.TotalPrescriptions</h5>
                            <p class="stat-label">Total Prescriptions</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.ActivePrescriptions</h5>
                            <p class="stat-label">Active Prescriptions</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-hand-holding-medical"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.DispensedPrescriptions</h5>
                            <p class="stat-label">Dispensed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.ExpiredPrescriptions</h5>
                            <p class="stat-label">Expired</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-pills me-2"></i>Prescription Management</h4>
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Write New Prescription
                </a>
            }
        </div>
        <div class="card-body">
            <!-- Filters -->
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="patientId" class="form-label">Patient</label>
                        <select name="patientId" id="patientId" class="form-select">
                            <option value="">All Patients</option>
                            @foreach (var patient in ViewBag.Patients as SelectList)
                            {
                                <option value="@patient.Value" selected="@patient.Selected">@patient.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="doctorId" class="form-label">Doctor</label>
                        <select name="doctorId" id="doctorId" class="form-select">
                            <option value="">All Doctors</option>
                            @foreach (var doctor in ViewBag.Doctors as SelectList)
                            {
                                <option value="@doctor.Value" selected="@doctor.Selected">@doctor.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select name="status" id="status" class="form-select">
                            <option value="">All Status</option>
                            @foreach (var status in ViewBag.StatusList as SelectList)
                            {
                                <option value="@status.Value" selected="@status.Selected">@status.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="fas fa-search me-1"></i>Filter
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Clear
                        </a>
                    </div>
                </div>
            </form>

            <!-- Prescriptions Table -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Prescription #</th>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Medications</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Dispensed</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">@item.PrescriptionNumber</strong>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle me-2 text-primary"></i>
                                        <strong>@Html.DisplayFor(modelItem => item.Patient.FullName)</strong>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Doctor != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-md me-2 text-success"></i>
                                            @item.Doctor.FullName
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not assigned</span>
                                    }
                                </td>
                                <td>
                                    @if (item.PrescriptionMedications.Any())
                                    {
                                        <div class="medication-list">
                                            @foreach (var med in item.PrescriptionMedications.Take(2))
                                            {
                                                <span class="badge bg-light text-dark me-1 mb-1">
                                                    <i class="fas fa-pills me-1"></i>@med.Medication.Name
                                                </span>
                                            }
                                            @if (item.PrescriptionMedications.Count() > 2)
                                            {
                                                <span class="badge bg-secondary">+@(item.PrescriptionMedications.Count() - 2) more</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No medications</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == "Active")
                                    {
                                        <span class="badge bg-success">@item.Status</span>
                                    }
                                    else if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-primary">@item.Status</span>
                                    }
                                    else if (item.Status == "Cancelled")
                                    {
                                        <span class="badge bg-danger">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    @item.PrescriptionDate.ToString("MMM dd, yyyy")
                                    @if (item.ExpiryDate.HasValue)
                                    {
                                        <br><small class="text-muted">Expires: @item.ExpiryDate.Value.ToString("MMM dd, yyyy")</small>
                                    }
                                </td>
                                <td>
                                    @if (item.IsDispensed)
                                    {
                                        <i class="fas fa-check-circle text-success" title="Dispensed"></i>
                                        @if (item.DispensedDate.HasValue)
                                        {
                                            <br><small class="text-muted">@item.DispensedDate.Value.ToString("MMM dd")</small>
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-clock text-warning" title="Pending"></i>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-pills fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No prescriptions found</h5>
                    <p class="text-muted">No prescriptions match your current filters.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
.medication-list {
    max-width: 200px;
}
.medication-list .badge {
    display: inline-block;
    margin-bottom: 2px;
}
</style> 