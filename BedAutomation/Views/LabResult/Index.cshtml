@model IEnumerable<BedAutomation.Models.LabResult>

@{
    ViewData["Title"] = "Lab Results";
}

<div class="container-fluid">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-flask"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.TotalResults</h5>
                            <p class="stat-label">Total Results</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-danger">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.CriticalResults</h5>
                            <p class="stat-label">Critical Results</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-exclamation"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.AbnormalResults</h5>
                            <p class="stat-label">Abnormal Results</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.UnverifiedResults</h5>
                            <p class="stat-label">Pending Verification</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-flask me-2"></i>Lab Results Management</h4>
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Add New Result
                </a>
            }
        </div>
        <div class="card-body">
            <!-- Filters -->
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="patientId" class="form-label">Patient</label>
                        <select name="patientId" id="patientId" class="form-select">
                            <option value="">All Patients</option>
                            @foreach (var patient in ViewBag.Patients as SelectList)
                            {
                                <option value="@patient.Value" selected="@patient.Selected">@patient.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="labTestId" class="form-label">Lab Test</label>
                        <select name="labTestId" id="labTestId" class="form-select">
                            <option value="">All Tests</option>
                            @foreach (var test in ViewBag.LabTests as SelectList)
                            {
                                <option value="@test.Value" selected="@test.Selected">@test.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select name="status" id="status" class="form-select">
                            <option value="">All Status</option>
                            @foreach (var status in ViewBag.StatusList as SelectList)
                            {
                                <option value="@status.Value" selected="@status.Selected">@status.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="fas fa-search me-1"></i>Filter
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Clear
                        </a>
                    </div>
                </div>
            </form>

            <!-- Results Table -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Test</th>
                            <th>Parameter</th>
                            <th>Value</th>
                            <th>Status</th>
                            <th>Test Date</th>
                            <th>Verified</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle me-2 text-primary"></i>
                                        <strong>@Html.DisplayFor(modelItem => item.Patient.FullName)</strong>
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.LabTest.Name)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LabParameter.Name)
                                    @if (!string.IsNullOrEmpty(item.LabParameter.Unit))
                                    {
                                        <small class="text-muted">(@item.LabParameter.Unit)</small>
                                    }
                                </td>
                                <td>
                                    @if (item.NumericValue.HasValue)
                                    {
                                        <span>@item.NumericValue.Value</span>
                                    }
                                    else
                                    {
                                        <span>@item.TextValue</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == "Normal")
                                    {
                                        <span class="badge bg-success">@item.Status</span>
                                    }
                                    else if (item.Status == "Critical")
                                    {
                                        <span class="badge bg-danger">@item.Status</span>
                                    }
                                    else if (item.Status == "High" || item.Status == "Low")
                                    {
                                        <span class="badge bg-warning">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>@item.TestDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (item.IsVerified)
                                    {
                                        <i class="fas fa-check-circle text-success" title="Verified"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-clock text-warning" title="Pending"></i>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-flask fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No lab results found</h5>
                    <p class="text-muted">No lab results match your current filters.</p>
                </div>
            }
        </div>
    </div>
</div> 