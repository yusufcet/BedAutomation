@model BedAutomation.Models.Prescription

@{
    ViewData["Title"] = "Reçete Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle me-2"></i>Reçete Kayıtını Sil</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-shield-exclamation me-2"></i>Dikkat!
                        </h5>
                        <p class="mb-2">Bu reçete kaydını silmek üzeresiniz. Bu işlem geri alınamaz!</p>
                        <hr>
                        <p class="mb-0">
                            <small>
                                • Hasta tedavi geçmişi etkilenebilir<br>
                                • İlaç izleme kayıtları silinecektir<br>
                                • Bu kayıt kalıcı olarak silinecektir
                            </small>
                        </p>
                    </div>

                    <!-- Reçete Bilgileri -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Silinecek Reçete Bilgileri</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <strong>Reçete Numarası:</strong><br>
                                    <i class="bi bi-hash me-1 text-primary"></i>
                                    @Model.PrescriptionNumber
                                </div>
                                <div class="col-md-6">
                                    <strong>Durum:</strong><br>
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            "Active" => "bg-success",
                                            "Completed" => "bg-info",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@Model.Status</span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Hasta:</strong><br>
                                    <i class="bi bi-person me-1 text-primary"></i>
                                    @Html.DisplayFor(model => model.Patient.FullName)
                                </div>
                                <div class="col-md-6">
                                    <strong>Doktor:</strong><br>
                                    <i class="bi bi-person-badge me-1 text-info"></i>
                                    @Html.DisplayFor(model => model.Doctor.FullName)
                                </div>
                                <div class="col-md-6">
                                    <strong>Reçete Tarihi:</strong><br>
                                    <i class="bi bi-calendar me-1 text-primary"></i>
                                    @Model.PrescriptionDate.ToString("dd.MM.yyyy HH:mm")
                                </div>
                                @if (Model.ExpiryDate.HasValue)
                                {
                                    <div class="col-md-6">
                                        <strong>Son Kullanma Tarihi:</strong><br>
                                        <i class="bi bi-calendar-x me-1 text-warning"></i>
                                        @Model.ExpiryDate.Value.ToString("dd.MM.yyyy")
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Diagnosis))
                                {
                                    <div class="col-md-12">
                                        <strong>Tanı:</strong><br>
                                        <div class="p-2 bg-white rounded border">
                                            @Model.Diagnosis
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- İlaç Listesi -->
                            @if (Model.PrescriptionMedications?.Any() == true)
                            {
                                <div class="mt-3">
                                    <strong>Reçeteli İlaçlar:</strong>
                                    <ul class="list-group mt-2">
                                        @foreach (var med in Model.PrescriptionMedications)
                                        {
                                            <li class="list-group-item">
                                                <strong>@med.Medication.Name</strong> - @med.Dosage (@med.Frequency)
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Onay Formu -->
                    <form asp-action="Delete" method="post" class="d-inline">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <h6 class="text-danger mb-3">Bu reçeteyi silmek istediğinizden emin misiniz?</h6>
                                
                                <button type="submit" class="btn btn-danger btn-lg me-3">
                                    <i class="bi bi-trash me-2"></i>Evet, Sil
                                </button>
                                
                                <a asp-action="Index" class="btn btn-secondary btn-lg me-2">
                                    <i class="bi bi-x-circle me-2"></i>Hayır, İptal Et
                                </a>
                                
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-lg">
                                    <i class="bi bi-eye me-2"></i>Detayları Gör
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card.border-danger {
        border-width: 2px;
    }
    
    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
    
    .alert-danger {
        border-left: 4px solid #dc3545;
    }
</style>
