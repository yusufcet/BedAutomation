@model BedAutomation.Models.Bed

@{
    ViewData["Title"] = "Bed Details";
}

<div class="container">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1><i class="fas fa-bed"></i> Bed Details</h1>
                <p class="mb-0">Complete information about this bed</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Bed Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5"><i class="fas fa-bed"></i> Bed Number:</dt>
                                <dd class="col-sm-7">@Model.BedNumber</dd>

                                <dt class="col-sm-5"><i class="fas fa-door-open"></i> Room:</dt>
                                <dd class="col-sm-7">@Model.Room.RoomNumber</dd>

                                <dt class="col-sm-5"><i class="fas fa-building"></i> Floor:</dt>
                                <dd class="col-sm-7">@Model.Room.Floor</dd>

                                <dt class="col-sm-5"><i class="fas fa-stethoscope"></i> Department:</dt>
                                <dd class="col-sm-7">@Model.Room.Department</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5"><i class="fas fa-hospital"></i> Bed Type:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-info">@Model.BedType</span>
                                </dd>

                                <dt class="col-sm-5"><i class="fas fa-info-circle"></i> Status:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.IsMaintenanceRequired)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-tools"></i> Maintenance Required
                                        </span>
                                    }
                                    else if (Model.IsOccupied)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-user"></i> Occupied
                                        </span>
                                    }
                                    else if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Available
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times"></i> Inactive
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-5"><i class="fas fa-calendar"></i> Created:</dt>
                                <dd class="col-sm-7">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr>
                        <h6><i class="fas fa-sticky-note"></i> Notes</h6>
                        <p class="text-muted">@Model.Notes</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Reservation" asp-action="Create" asp-route-bedId="@Model.Id" 
                           class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create Reservation
                        </a>
                        
                        <form asp-action="ToggleMaintenance" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="fas fa-tools"></i> Toggle Maintenance
                            </button>
                        </form>
                        
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Bed
                        </a>
                        
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Bed
                        </a>
                    </div>
                </div>
            </div>

            @{
                var currentReservation = Model.Reservations.FirstOrDefault(r => r.Status == "Active" || r.Status == "Reserved");
            }
            
            @if (currentReservation != null)
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-user"></i> Current Patient
                        </h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@currentReservation.Patient.FirstName @currentReservation.Patient.LastName</dd>

                            <dt class="col-sm-4">ID:</dt>
                            <dd class="col-sm-8">@currentReservation.Patient.IdentityNumber</dd>

                            <dt class="col-sm-4">Check In:</dt>
                            <dd class="col-sm-8">@currentReservation.CheckInDate.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success">
                                    @currentReservation.Status
                                </span>
                            </dd>
                        </dl>
                        
                        <div class="mt-3">
                            <a asp-controller="Reservation" asp-action="Details" asp-route-id="@currentReservation.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> View Reservation
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (Model.Reservations.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-history"></i> Reservation History
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Patient</th>
                                        <th>Check In</th>
                                        <th>Check Out</th>
                                        <th>Status</th>
                                        <th>Priority</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in Model.Reservations.OrderByDescending(r => r.CreatedAt))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@reservation.Patient.FirstName @reservation.Patient.LastName</strong>
                                                <br>
                                                <small class="text-muted">@reservation.Patient.IdentityNumber</small>
                                            </td>
                                            <td>@reservation.CheckInDate.ToString("dd/MM/yyyy")</td>
                                            <td>@(reservation.CheckOutDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @reservation.Status
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">
                                                    @reservation.Priority
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-controller="Reservation" asp-action="Details" asp-route-id="@reservation.Id" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div> 