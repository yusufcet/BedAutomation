@model BedAutomation.Models.Reservation

@{
    ViewData["Title"] = "Edit Reservation";
}

<div class="container">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1><i class="fas fa-edit"></i> Edit Reservation</h1>
                <p class="mb-0">Update reservation details</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bed"></i> Reservation Details
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientId" class="form-label">
                                        <i class="fas fa-user"></i> Patient
                                    </label>
                                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId">
                                        <option value="">Select a patient</option>
                                    </select>
                                    <span asp-validation-for="PatientId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="BedId" class="form-label">
                                        <i class="fas fa-bed"></i> Bed
                                    </label>
                                    <select asp-for="BedId" class="form-control" asp-items="ViewBag.BedId">
                                        <option value="">Select a bed</option>
                                    </select>
                                    <span asp-validation-for="BedId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CheckInDate" class="form-label">
                                        <i class="fas fa-calendar"></i> Check-in Date & Time
                                    </label>
                                    <input asp-for="CheckInDate" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CheckOutDate" class="form-label">
                                        <i class="fas fa-calendar-times"></i> Expected Check-out Date (Optional)
                                    </label>
                                    <input asp-for="CheckOutDate" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">
                                        <i class="fas fa-info-circle"></i> Status
                                    </label>
                                    <select asp-for="Status" class="form-control">
                                        <option value="Reserved">Reserved</option>
                                        <option value="Active">Active</option>
                                        <option value="Completed">Completed</option>
                                        <option value="Cancelled">Cancelled</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Priority" class="form-label">
                                        <i class="fas fa-flag"></i> Priority Level
                                    </label>
                                    <select asp-for="Priority" class="form-control">
                                        <option value="Normal">Normal</option>
                                        <option value="High">High</option>
                                        <option value="Emergency">Emergency</option>
                                        <option value="Low">Low</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="AdmissionType" class="form-label">
                                        <i class="fas fa-ambulance"></i> Admission Type
                                    </label>
                                    <select asp-for="AdmissionType" class="form-control">
                                        <option value="">Select admission type</option>
                                        <option value="Emergency">Emergency</option>
                                        <option value="Scheduled">Scheduled</option>
                                        <option value="Transfer">Transfer</option>
                                        <option value="Outpatient">Outpatient</option>
                                    </select>
                                    <span asp-validation-for="AdmissionType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="DoctorId" class="form-label">
                                        <i class="fas fa-user-md"></i> Assigned Doctor
                                    </label>
                                    <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId">
                                        <option value="">Select a doctor (Optional)</option>
                                    </select>
                                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MedicalNotes" class="form-label">
                                <i class="fas fa-stethoscope"></i> Medical Notes
                            </label>
                            <textarea asp-for="MedicalNotes" class="form-control" rows="4" placeholder="Enter medical notes, conditions, or special requirements..."></textarea>
                            <span asp-validation-for="MedicalNotes" class="text-danger"></span>
                        </div>


                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Format datetime-local fields
            var checkInDate = '@Html.Raw(Model.CheckInDate.ToString("yyyy-MM-dd\\THH:mm"))';
            $('#CheckInDate').val(checkInDate);
            
            @if (Model.CheckOutDate.HasValue)
            {
                <text>
                var checkOutDate = '@Html.Raw(Model.CheckOutDate.Value.ToString("yyyy-MM-dd\\THH:mm"))';
                $('#CheckOutDate').val(checkOutDate);
                </text>
            }
        });
    </script>
} 