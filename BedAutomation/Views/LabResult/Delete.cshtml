@model BedAutomation.Models.LabResult

@{
    ViewData["Title"] = "Delete Lab Result";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-trash me-2"></i>Delete Lab Result</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this lab result? This action cannot be undone.
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Patient</label>
                                <div class="info-value">
                                    <i class="fas fa-user me-2 text-primary"></i>
                                    @Html.DisplayFor(model => model.Patient.FullName)
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Lab Test</label>
                                <div class="info-value">
                                    <i class="fas fa-vial me-2 text-info"></i>
                                    @Html.DisplayFor(model => model.LabTest.Name)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Parameter</label>
                                <div class="info-value">
                                    <i class="fas fa-flask me-2 text-success"></i>
                                    @Html.DisplayFor(model => model.LabParameter.Name)
                                    @if (!string.IsNullOrEmpty(Model.LabParameter.Unit))
                                    {
                                        <small class="text-muted">(@Model.LabParameter.Unit)</small>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Status</label>
                                <div class="info-value">
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            "Normal" => "text-success",
                                            "High" => "text-warning",
                                            "Low" => "text-warning", 
                                            "Critical" => "text-danger",
                                            _ => "text-secondary"
                                        };
                                        var statusIcon = Model.Status switch
                                        {
                                            "Normal" => "fas fa-check-circle",
                                            "High" => "fas fa-arrow-up",
                                            "Low" => "fas fa-arrow-down",
                                            "Critical" => "fas fa-exclamation-triangle",
                                            _ => "fas fa-question-circle"
                                        };
                                    }
                                    <span class="@statusClass">
                                        <i class="@statusIcon me-1"></i>@Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>

                        @if (Model.NumericValue.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="info-group">
                                    <label class="info-label">Numeric Value</label>
                                    <div class="info-value">
                                        <strong>@Model.NumericValue.Value</strong>
                                        @if (!string.IsNullOrEmpty(Model.LabParameter.Unit))
                                        {
                                            <span class="text-muted">@Model.LabParameter.Unit</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.TextValue))
                        {
                            <div class="col-md-6">
                                <div class="info-group">
                                    <label class="info-label">Text Value</label>
                                    <div class="info-value">@Model.TextValue</div>
                                </div>
                            </div>
                        }

                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Test Date</label>
                                <div class="info-value">
                                    <i class="fas fa-calendar me-2 text-primary"></i>
                                    @Model.TestDate.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Result Date</label>
                                <div class="info-value">
                                    <i class="fas fa-calendar-check me-2 text-success"></i>
                                    @Model.ResultDate.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info me-2">
                                <i class="fas fa-eye me-1"></i>Details
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this lab result?')">
                                    <i class="fas fa-trash me-1"></i>Delete Lab Result
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-group {
        margin-bottom: 1rem;
    }
    .info-label {
        font-weight: 600;
        color: #6c757d;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
        display: block;
    }
    .info-value {
        font-size: 1rem;
        color: #212529;
        padding: 0.5rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    .info-value:last-child {
        border-bottom: none;
    }
</style> 