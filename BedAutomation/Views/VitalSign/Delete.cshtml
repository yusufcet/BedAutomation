@model BedAutomation.Models.VitalSign

@{
    ViewData["Title"] = "Vital Sign Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle me-2"></i>Vital Sign Kayıtını Sil</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-shield-exclamation me-2"></i>Dikkat!
                        </h5>
                        <p class="mb-2">Bu vital sign kaydını silmek üzeresiniz. Bu işlem geri alınamaz!</p>
                        <hr>
                        <p class="mb-0">
                            <small>
                                • Hasta tıbbi geçmişi etkilenebilir<br>
                                • Trend analizleri eksik kalabilir<br>
                                • Bu kayıt kalıcı olarak silinecektir
                            </small>
                        </p>
                    </div>

                    <!-- Vital Sign Bilgileri -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Silinecek Kayıt Bilgileri</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <strong>Hasta:</strong><br>
                                    <i class="bi bi-person me-1 text-primary"></i>
                                    @Html.DisplayFor(model => model.Patient.FullName)
                                </div>
                                <div class="col-md-6">
                                    <strong>Vital Sign Türü:</strong><br>
                                    <i class="bi bi-thermometer me-1 text-info"></i>
                                    @Html.DisplayFor(model => model.VitalSignType.Name)
                                </div>
                                <div class="col-md-6">
                                    <strong>Değer:</strong><br>
                                    <span class="fs-5 fw-bold">@Model.Value @Model.VitalSignType.Unit</span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Durum:</strong><br>
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            "Normal" => "text-success",
                                            "High" => "text-warning",
                                            "Low" => "text-warning", 
                                            "Critical" => "text-danger",
                                            _ => "text-secondary"
                                        };
                                        var statusIcon = Model.Status switch
                                        {
                                            "Normal" => "bi bi-check-circle",
                                            "High" => "bi bi-arrow-up",
                                            "Low" => "bi bi-arrow-down",
                                            "Critical" => "bi bi-exclamation-triangle",
                                            _ => "bi bi-question-circle"
                                        };
                                    }
                                    <span class="@statusClass">
                                        <i class="@statusIcon me-1"></i>@Model.Status
                                    </span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Ölçüm Tarihi:</strong><br>
                                    <i class="bi bi-calendar me-1 text-primary"></i>
                                    @Model.MeasurementDate.ToString("dd.MM.yyyy HH:mm")
                                </div>
                                <div class="col-md-6">
                                    <strong>Kayıt Tarihi:</strong><br>
                                    <i class="bi bi-plus-circle me-1 text-secondary"></i>
                                    @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </div>
                                @if (!string.IsNullOrEmpty(Model.MeasuredBy))
                                {
                                    <div class="col-md-6">
                                        <strong>Ölçen Kişi:</strong><br>
                                        <i class="bi bi-person-badge me-1 text-info"></i>
                                        @Model.MeasuredBy
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Location))
                                {
                                    <div class="col-md-6">
                                        <strong>Konum:</strong><br>
                                        <i class="bi bi-geo-alt me-1 text-warning"></i>
                                        @Model.Location
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Notes))
                                {
                                    <div class="col-md-12">
                                        <strong>Notlar:</strong><br>
                                        <div class="p-2 bg-white rounded border">
                                            @Model.Notes
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Onay Formu -->
                    <form asp-action="Delete" method="post" class="d-inline">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <h6 class="text-danger mb-3">Bu kaydı silmek istediğinizden emin misiniz?</h6>
                                
                                <button type="submit" class="btn btn-danger btn-lg me-3">
                                    <i class="bi bi-trash me-2"></i>Evet, Sil
                                </button>
                                
                                <a asp-action="Index" class="btn btn-secondary btn-lg me-2">
                                    <i class="bi bi-x-circle me-2"></i>Hayır, İptal Et
                                </a>
                                
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-lg">
                                    <i class="bi bi-eye me-2"></i>Detayları Gör
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card.border-danger {
        border-width: 2px;
    }
    
    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
    
    .alert-danger {
        border-left: 4px solid #dc3545;
    }
</style> 