@model IEnumerable<BedAutomation.Models.Prescription>

@{
    ViewData["Title"] = "My Prescriptions";
}

<div class="container-fluid">
    <!-- Patient Info Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="bi bi-person-circle me-2"></i>Patient Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @ViewBag.Patient.FullName</p>
                            <p><strong>Identity Number:</strong> @ViewBag.Patient.IdentityNumber</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Phone:</strong> @ViewBag.Patient.PhoneNumber</p>
                            <p><strong>Email:</strong> @ViewBag.Patient.Email</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="bi bi-prescription2"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.TotalPrescriptions</h5>
                            <p class="stat-label">Total Prescriptions</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.ActivePrescriptions</h5>
                            <p class="stat-label">Active</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="bi bi-check-all"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.CompletedPrescriptions</h5>
                            <p class="stat-label">Completed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="bi bi-calendar-week"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.RecentPrescriptions</h5>
                            <p class="stat-label">Last 30 Days</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Prescriptions List -->
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var prescription in Model)
            {
                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card prescription-card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-prescription2 me-2 text-primary"></i>
                                <strong>Prescription #@prescription.Id</strong>
                            </div>
                            <span class="badge @(prescription.Status == "Active" ? "bg-success" : prescription.Status == "Completed" ? "bg-info" : "bg-secondary")">
                                @prescription.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Doctor:</strong></p>
                                    <p class="text-muted">Dr. @prescription.Doctor.FirstName @prescription.Doctor.LastName</p>
                                    <p class="mb-1"><strong>Specialization:</strong></p>
                                    <p class="text-muted">@prescription.Doctor.Specialization</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Date:</strong></p>
                                    <p class="text-muted">@prescription.PrescriptionDate.ToString("MMM dd, yyyy")</p>
                                    <p class="mb-1"><strong>End Date:</strong></p>
                                    <p class="text-muted">
                                        @(prescription.ExpiryDate?.ToString("MMM dd, yyyy") ?? "Not specified")
                                    </p>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(prescription.Instructions))
                            {
                                <div class="mb-3">
                                    <p class="mb-1"><strong>Instructions:</strong></p>
                                    <p class="text-muted">@prescription.Instructions</p>
                                </div>
                            }

                            @if (prescription.PrescriptionMedications.Any())
                            {
                                <div class="medications-section">
                                    <h6 class="mb-2"><i class="bi bi-capsule me-1"></i>Medications:</h6>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Medication</th>
                                                    <th>Dosage</th>
                                                    <th>Frequency</th>
                                                    <th>Duration</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var med in prescription.PrescriptionMedications)
                                                {
                                                    <tr>
                                                        <td>@med.Medication.Name</td>
                                                        <td>@med.Dosage</td>
                                                        <td>@med.Frequency</td>
                                                        <td>@med.Duration</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="text-center py-5">
                    <i class="bi bi-prescription2" style="font-size: 3rem; color: #6c757d; margin-bottom: 1rem;"></i>
                    <h5 class="text-muted">No prescriptions found</h5>
                    <p class="text-muted">You don't have any prescriptions yet.</p>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .stat-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: transform 0.15s ease-in-out;
    }

    .stat-card:hover {
        transform: translateY(-2px);
    }

    .stat-card-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .stat-card-success {
        background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
        color: white;
    }

    .stat-card-info {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        color: #333;
    }

    .stat-card-warning {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        color: #333;
    }

    .stat-icon {
        font-size: 2rem;
        margin-right: 1rem;
        opacity: 0.8;
    }

    .stat-number {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0;
    }

    .stat-label {
        font-size: 0.875rem;
        margin-bottom: 0;
        opacity: 0.9;
    }

    .prescription-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: transform 0.15s ease-in-out;
    }

    .prescription-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
    }

    .medications-section {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        border-left: 4px solid #007bff;
    }
</style> 