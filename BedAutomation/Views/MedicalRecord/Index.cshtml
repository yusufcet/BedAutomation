@model IEnumerable<BedAutomation.Models.MedicalRecord>

@{
    ViewData["Title"] = "Medical Records";
}

<div class="container-fluid">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-file-medical"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.TotalRecords</h5>
                            <p class="stat-label">Total Records</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-user-check"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.ActivePatients</h5>
                            <p class="stat-label">Active Patients</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.CriticalRecords</h5>
                            <p class="stat-label">Critical Records</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-stethoscope"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.RecentRecords</h5>
                            <p class="stat-label">Recent Records</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-file-medical me-2"></i>Medical Records Management</h4>
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>New Medical Record
                </a>
            }
        </div>
        <div class="card-body">
            <!-- Filters -->
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="patientId" class="form-label">Patient</label>
                        <select name="patientId" id="patientId" class="form-select">
                            <option value="">All Patients</option>
                            @foreach (var patient in ViewBag.Patients as SelectList)
                            {
                                <option value="@patient.Value" selected="@patient.Selected">@patient.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="doctorId" class="form-label">Doctor</label>
                        <select name="doctorId" id="doctorId" class="form-select">
                            <option value="">All Doctors</option>
                            @foreach (var doctor in ViewBag.Doctors as SelectList)
                            {
                                <option value="@doctor.Value" selected="@doctor.Selected">@doctor.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="recordType" class="form-label">Record Type</label>
                        <select name="recordType" id="recordType" class="form-select">
                            <option value="">All Types</option>
                            @foreach (var type in ViewBag.RecordTypes as SelectList)
                            {
                                <option value="@type.Value" selected="@type.Selected">@type.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="fas fa-search me-1"></i>Filter
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Clear
                        </a>
                    </div>
                </div>
            </form>

            <!-- Medical Records Table -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Doctor</th>
                            <th>Record Type</th>
                            <th>Date</th>
                            <th>Chief Complaint</th>
                            <th>Diagnoses</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle me-2 text-primary"></i>
                                        <div>
                                            <strong>@Html.DisplayFor(modelItem => item.Patient.FullName)</strong>
                                            @if (!string.IsNullOrEmpty(item.Patient.DateOfBirth.ToString()))
                                            {
                                                <br><small class="text-muted">@item.Patient.DateOfBirth.ToString("yyyy-MM-dd")</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Doctor != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-md me-2 text-success"></i>
                                            <div>
                                                @item.Doctor.FullName
                                                @if (!string.IsNullOrEmpty(item.Doctor.Specialization))
                                                {
                                                    <br><small class="text-muted">@item.Doctor.Specialization</small>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not assigned</span>
                                    }
                                </td>
                                <td>
                                    @if (item.RecordType == "Admission")
                                    {
                                        <span class="badge bg-primary">@item.RecordType</span>
                                    }
                                    else if (item.RecordType == "Discharge")
                                    {
                                        <span class="badge bg-success">@item.RecordType</span>
                                    }
                                    else if (item.RecordType == "Emergency")
                                    {
                                        <span class="badge bg-danger">@item.RecordType</span>
                                    }
                                    else if (item.RecordType == "Consultation")
                                    {
                                        <span class="badge bg-info">@item.RecordType</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.RecordType</span>
                                    }
                                </td>
                                <td>
                                    @item.RecordDate.ToString("MMM dd, yyyy")
                                    <br><small class="text-muted">@item.RecordDate.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ChiefComplaint))
                                    {
                                        <div class="text-truncate" style="max-width: 200px;" title="@item.ChiefComplaint">
                                            @item.ChiefComplaint
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No complaint recorded</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Diagnoses.Any())
                                    {
                                        <div class="diagnosis-list">
                                            @foreach (var diagnosis in item.Diagnoses.Take(2))
                                            {
                                                <span class="badge bg-light text-dark me-1 mb-1" title="@diagnosis.Description">
                                                    @diagnosis.ICDCode
                                                </span>
                                            }
                                            @if (item.Diagnoses.Count() > 2)
                                            {
                                                <span class="badge bg-secondary">+@(item.Diagnoses.Count() - 2) more</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No diagnoses</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == "Active")
                                    {
                                        <span class="badge bg-success">@item.Status</span>
                                    }
                                    else if (item.Status == "Closed")
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                    else if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-medical fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No medical records found</h5>
                    <p class="text-muted">No medical records match your current filters.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
.diagnosis-list {
    max-width: 200px;
}
.diagnosis-list .badge {
    display: inline-block;
    margin-bottom: 2px;
    font-size: 0.7em;
}
</style> 