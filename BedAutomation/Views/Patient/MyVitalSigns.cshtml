@model IEnumerable<BedAutomation.Models.VitalSign>

@{
    ViewData["Title"] = "My Vital Signs";
}

<div class="container-fluid">
    <!-- Patient Info Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="bi bi-person-circle me-2"></i>Patient Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @ViewBag.Patient.FullName</p>
                            <p><strong>Identity Number:</strong> @ViewBag.Patient.IdentityNumber</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Phone:</strong> @ViewBag.Patient.PhoneNumber</p>
                            <p><strong>Email:</strong> @ViewBag.Patient.Email</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="bi bi-heart-pulse"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.TotalReadings</h5>
                            <p class="stat-label">Total Readings</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-danger">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="bi bi-exclamation-triangle"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.CriticalReadings</h5>
                            <p class="stat-label">Critical</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="bi bi-exclamation"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.AbnormalReadings</h5>
                            <p class="stat-label">Abnormal</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="bi bi-calendar-week"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.RecentReadings</h5>
                            <p class="stat-label">Last 7 Days</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vital Signs Table -->
    <div class="card">
        <div class="card-header">
            <h4><i class="bi bi-heart-pulse me-2"></i>My Vital Signs</h4>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Value</th>
                                <th>Status</th>
                                <th>Measurement Date</th>
                                <th>Measured By</th>
                                <th>Location</th>
                                <th>Verified</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-activity me-2 text-primary"></i>
                                            <strong>@Html.DisplayFor(modelItem => item.VitalSignType.Name)</strong>
                                        </div>
                                        @if (!string.IsNullOrEmpty(item.VitalSignType.Unit))
                                        {
                                            <small class="text-muted">(@item.VitalSignType.Unit)</small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.StringValue))
                                        {
                                            <span>@item.StringValue</span>
                                        }
                                        else
                                        {
                                            <span>@item.Value @item.VitalSignType.Unit</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == "Normal")
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (item.Status == "Critical")
                                        {
                                            <span class="badge bg-danger">@item.Status</span>
                                        }
                                        else if (item.Status == "High" || item.Status == "Low")
                                        {
                                            <span class="badge bg-warning">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td>@item.MeasurementDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@item.MeasuredBy</td>
                                    <td>@item.Location</td>
                                    <td>
                                        @if (item.IsVerified)
                                        {
                                            <i class="bi bi-check-circle text-success" title="Verified"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-clock text-warning" title="Pending"></i>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-heart-pulse" style="font-size: 3rem; color: #6c757d; margin-bottom: 1rem;"></i>
                    <h5 class="text-muted">No vital signs found</h5>
                    <p class="text-muted">You don't have any vital sign recordings yet.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .stat-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: transform 0.15s ease-in-out;
    }

    .stat-card:hover {
        transform: translateY(-2px);
    }

    .stat-card-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .stat-card-danger {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .stat-card-warning {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        color: #333;
    }

    .stat-card-info {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        color: #333;
    }

    .stat-icon {
        font-size: 2rem;
        margin-right: 1rem;
        opacity: 0.8;
    }

    .stat-number {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0;
    }

    .stat-label {
        font-size: 0.875rem;
        margin-bottom: 0;
        opacity: 0.9;
    }
</style> 