@model BedAutomation.Models.VitalSign

@{
    ViewData["Title"] = "Vital Sign Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-heart-pulse me-2"></i>Vital Sign Details</h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-list me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <!-- Hasta Bilgisi -->
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Hasta</label>
                                <div class="info-value">
                                    <i class="bi bi-person me-2 text-primary"></i>
                                    @Html.DisplayFor(model => model.Patient.FullName)
                                </div>
                            </div>
                        </div>

                        <!-- Vital Sign Türü -->
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Vital Sign Type</label>
                                <div class="info-value">
                                    <i class="bi bi-thermometer me-2 text-info"></i>
                                    @Html.DisplayFor(model => model.VitalSignType.Name)
                                    @if (!string.IsNullOrEmpty(Model.VitalSignType.Unit))
                                    {
                                        <small class="text-muted">(@Model.VitalSignType.Unit)</small>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Durum -->
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Status</label>
                                <div class="info-value">
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            "Normal" => "text-success",
                                            "High" => "text-warning",
                                            "Low" => "text-warning", 
                                            "Critical" => "text-danger",
                                            _ => "text-secondary"
                                        };
                                        var statusIcon = Model.Status switch
                                        {
                                            "Normal" => "bi bi-check-circle",
                                            "High" => "bi bi-arrow-up",
                                            "Low" => "bi bi-arrow-down",
                                            "Critical" => "bi bi-exclamation-triangle",
                                            _ => "bi bi-question-circle"
                                        };
                                    }
                                    <span class="@statusClass">
                                        <i class="@statusIcon me-1"></i>@Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Doğrulama Durumu -->
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Verification Status</label>
                                <div class="info-value">
                                    @if (Model.IsVerified)
                                    {
                                        <span class="text-success">
                                            <i class="bi bi-check-circle me-1"></i>Verified
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-warning">
                                            <i class="bi bi-clock me-1"></i>Verification Pending
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Değer -->
                        <div class="col-md-12">
                            <div class="info-group">
                                <label class="info-label">Value</label>
                                <div class="info-value">
                                    <strong class="fs-4">@Model.Value</strong>
                                    @if (!string.IsNullOrEmpty(Model.VitalSignType.Unit))
                                    {
                                        <span class="text-muted ms-1">@Model.VitalSignType.Unit</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.StringValue))
                                    {
                                        <br><small class="text-muted">Ek Bilgi: @Model.StringValue</small>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Ölçüm Tarihi -->
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Measurement Date</label>
                                <div class="info-value">
                                    <i class="bi bi-calendar me-2 text-primary"></i>
                                    @Model.MeasurementDate.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <!-- Kayıt Tarihi -->
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="info-label">Record Date</label>
                                <div class="info-value">
                                    <i class="bi bi-plus-circle me-2 text-secondary"></i>
                                    @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <!-- Ölçen Kişi -->
                        @if (!string.IsNullOrEmpty(Model.MeasuredBy))
                        {
                            <div class="col-md-6">
                                <div class="info-group">
                                    <label class="info-label">Measured By</label>
                                    <div class="info-value">
                                        <i class="bi bi-person-badge me-2 text-info"></i>
                                        @Model.MeasuredBy
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Konum -->
                        @if (!string.IsNullOrEmpty(Model.Location))
                        {
                            <div class="col-md-6">
                                <div class="info-group">
                                    <label class="info-label">Location</label>
                                    <div class="info-value">
                                        <i class="bi bi-geo-alt me-2 text-warning"></i>
                                        @Model.Location
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Notlar -->
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="col-md-12">
                                <div class="info-group">
                                    <label class="info-label">Notes</label>
                                    <div class="info-value">
                                        <div class="p-3 bg-light rounded">
                                            @Model.Notes
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Grafik Linki -->
                    <div class="mt-4 pt-3 border-top">
                        <a asp-action="Chart" asp-route-patientId="@Model.PatientId" asp-route-vitalSignTypeId="@Model.VitalSignTypeId" class="btn btn-outline-success">
                            <i class="bi bi-graph-up me-1"></i>View Trend Graph
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-group {
        margin-bottom: 1rem;
    }
    .info-label {
        font-weight: 600;
        color: #6c757d;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
        display: block;
    }
    .info-value {
        font-size: 1rem;
        color: #212529;
        padding: 0.5rem 0;
        border-bottom: 1px solid #e9ecef;
    }
    .info-value:last-child {
        border-bottom: none;
    }
</style> 