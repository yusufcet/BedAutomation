@model IEnumerable<BedAutomation.Models.VitalSign>

@{
    ViewData["Title"] = "Vital Signs";
}

<div class="container-fluid">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-heartbeat"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.TotalSigns</h5>
                            <p class="stat-label">Total Measurements</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-danger">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.CriticalSigns</h5>
                            <p class="stat-label">Critical Values</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-exclamation"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.AbnormalSigns</h5>
                            <p class="stat-label">Abnormal Values</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card stat-card-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div>
                            <h5 class="stat-number">@ViewBag.UnverifiedSigns</h5>
                            <p class="stat-label">Pending Verification</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-heartbeat me-2"></i>Vital Signs Monitoring</h4>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Add New Measurement
            </a>
        </div>
        <div class="card-body">
            <!-- Filters -->
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="patientId" class="form-label">Patient</label>
                        <select name="patientId" id="patientId" class="form-select">
                            <option value="">All Patients</option>
                            @foreach (var patient in ViewBag.Patients as SelectList)
                            {
                                <option value="@patient.Value" selected="@patient.Selected">@patient.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="vitalSignTypeId" class="form-label">Vital Sign Type</label>
                        <select name="vitalSignTypeId" id="vitalSignTypeId" class="form-select">
                            <option value="">All Types</option>
                            @foreach (var type in ViewBag.VitalSignTypes as SelectList)
                            {
                                <option value="@type.Value" selected="@type.Selected">@type.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select name="status" id="status" class="form-select">
                            <option value="">All Status</option>
                            @foreach (var status in ViewBag.StatusList as SelectList)
                            {
                                <option value="@status.Value" selected="@status.Selected">@status.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="fas fa-search me-1"></i>Filter
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Clear
                        </a>
                    </div>
                </div>
            </form>

            <!-- Results Table -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Patient</th>
                            <th>Vital Sign</th>
                            <th>Value</th>
                            <th>Status</th>
                            <th>Measurement Date</th>
                            <th>Measured By</th>
                            <th>Verified</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle me-2 text-primary"></i>
                                        <strong>@Html.DisplayFor(modelItem => item.Patient.FullName)</strong>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        @Html.DisplayFor(modelItem => item.VitalSignType.Name)
                                        @if (!string.IsNullOrEmpty(item.VitalSignType.Unit))
                                        {
                                            <small class="text-muted">(@item.VitalSignType.Unit)</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.StringValue))
                                    {
                                        <span class="fw-bold">@item.StringValue</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">@item.Value</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == "Normal")
                                    {
                                        <span class="badge bg-success">@item.Status</span>
                                    }
                                    else if (item.Status == "Critical")
                                    {
                                        <span class="badge bg-danger">@item.Status</span>
                                    }
                                    else if (item.Status == "High" || item.Status == "Low")
                                    {
                                        <span class="badge bg-warning">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>@item.MeasurementDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>@item.MeasuredBy</td>
                                <td>
                                    @if (item.IsVerified)
                                    {
                                        <i class="fas fa-check-circle text-success" title="Verified"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-clock text-warning" title="Pending"></i>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Chart" asp-route-patientId="@item.PatientId" asp-route-vitalSignTypeId="@item.VitalSignTypeId" class="btn btn-sm btn-outline-success" title="View Chart">
                                            <i class="fas fa-chart-line"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-heartbeat fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No vital signs found</h5>
                    <p class="text-muted">No vital signs measurements match your current filters.</p>
                </div>
            }
        </div>
    </div>
</div> 