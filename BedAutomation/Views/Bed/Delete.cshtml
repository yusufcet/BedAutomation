@model BedAutomation.Models.Bed

@{
    ViewData["Title"] = "Delete Bed";
}

<div class="container">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1><i class="fas fa-trash text-danger"></i> Delete Bed</h1>
                <p class="mb-0">Are you sure you want to delete this bed?</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning!</strong> This action cannot be undone. All associated data will be permanently deleted.
            </div>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bed"></i> Bed to be Deleted
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5"><i class="fas fa-bed"></i> Bed Number:</dt>
                                <dd class="col-sm-7"><strong>@Model.BedNumber</strong></dd>

                                <dt class="col-sm-5"><i class="fas fa-door-open"></i> Room:</dt>
                                <dd class="col-sm-7">@Model.Room.RoomNumber</dd>

                                <dt class="col-sm-5"><i class="fas fa-building"></i> Floor:</dt>
                                <dd class="col-sm-7">@Model.Room.Floor</dd>

                                <dt class="col-sm-5"><i class="fas fa-stethoscope"></i> Department:</dt>
                                <dd class="col-sm-7">@Model.Room.Department</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5"><i class="fas fa-hospital"></i> Bed Type:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-info">@Model.BedType</span>
                                </dd>

                                <dt class="col-sm-5"><i class="fas fa-info-circle"></i> Status:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.IsMaintenanceRequired)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-tools"></i> Maintenance Required
                                        </span>
                                    }
                                    else if (Model.IsOccupied)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-user"></i> Occupied
                                        </span>
                                    }
                                    else if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Available
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times"></i> Inactive
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-5"><i class="fas fa-calendar"></i> Created:</dt>
                                <dd class="col-sm-7">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr>
                        <h6><i class="fas fa-sticky-note"></i> Notes</h6>
                        <p class="text-muted">@Model.Notes</p>
                    }

                    @if (Model.Reservations.Any())
                    {
                        <hr>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Warning:</strong> This bed has @Model.Reservations.Count() reservation(s) associated with it. 
                            Deleting this bed will also delete all reservation records.
                        </div>

                        <h6><i class="fas fa-history"></i> Associated Reservations (@Model.Reservations.Count())</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Patient</th>
                                        <th>Check In</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reservation in Model.Reservations.OrderByDescending(r => r.CreatedAt).Take(5))
                                    {
                                        <tr>
                                            <td>@reservation.Patient.FirstName @reservation.Patient.LastName</td>
                                            <td>@reservation.CheckInDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge bg-secondary">@reservation.Status</span>
                                            </td>
                                        </tr>
                                    }
                                    @if (Model.Reservations.Count() > 5)
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center text-muted">
                                                ... and @(Model.Reservations.Count() - 5) more reservations
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (Model.IsOccupied)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-user"></i>
                            <strong>Bed is Currently Occupied!</strong> 
                            This bed cannot be deleted while it has an active patient. 
                            Please check out the current patient first.
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Bed
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 