@model BedAutomation.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1><i class="fas fa-trash-alt text-danger"></i> Delete Room</h1>
                    <p class="mb-0">Confirm room deletion</p>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-light btn-lg">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning!</strong> Are you sure you want to delete this room? This action cannot be undone.
                @if (Model.Beds.Any())
                {
                    <div>
                    <br><strong>Note:</strong> This room contains @Model.Beds.Count beds which will also be deleted.
                    </div>
                }
            </div>

            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-door-open"></i> Room Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-door-open"></i> Room Number
                                </label>
                                <div class="form-control-plaintext fw-bold">@Model.RoomNumber</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-hospital"></i> Room Type
                                </label>
                                <div class="form-control-plaintext">@Model.RoomType</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-stethoscope"></i> Department
                                </label>
                                <div class="form-control-plaintext">@Model.Department</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-building"></i> Floor
                                </label>
                                <div class="form-control-plaintext">
                                    @if (Model.Floor == 0)
                                    {
                                        <text>Ground Floor</text>
                                    }
                                    else
                                    {
                                        <text>Floor @Model.Floor</text>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-bed"></i> Bed Capacity
                                </label>
                                <div class="form-control-plaintext">@Model.BedCapacity beds</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-check-circle"></i> Status
                                </label>
                                <div class="form-control-plaintext">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-info-circle"></i> Description
                            </label>
                            <div class="form-control-plaintext">@Model.Description</div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fas fa-calendar-alt"></i> Created At
                        </label>
                        <div class="form-control-plaintext">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    @if (Model.Beds.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted">
                                <i class="fas fa-bed"></i> Associated Beds
                            </label>
                            <div class="row">
                                @foreach (var bed in Model.Beds.Take(8))
                                {
                                    <div class="col-md-3 mb-2">
                                        <span class="badge @(bed.IsOccupied ? "bg-danger" : "bg-success") p-2">
                                            @bed.BedNumber
                                        </span>
                                    </div>
                                }
                                @if (Model.Beds.Count > 8)
                                {
                                    <div class="col-md-3 mb-2">
                                        <span class="badge bg-secondary p-2">
                                            +@(Model.Beds.Count - 8) more
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this room? This action cannot be undone.')">
                                <i class="fas fa-trash-alt"></i> Delete Room
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </div>
</div> 