<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bed Automation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BedAutomation.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="d-flex align-items-center">
                <div class="sidebar-brand">
                    <i class="fas fa-bed me-2"></i>
                    <span>Bed Automation</span>
                </div>
                <button class="btn-close-sidebar d-lg-none" onclick="toggleSidebar()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        
        <div class="sidebar-menu">
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Home" asp-action="Index" class="menu-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>
                <a asp-controller="Patient" asp-action="Index" class="menu-item">
                    <i class="fas fa-users"></i>
                    <span>Patients</span>
                </a>
                <a asp-controller="Reservation" asp-action="Index" class="menu-item">
                    <i class="fas fa-calendar-check"></i>
                    <span>Reservations</span>
                </a>
                <a asp-controller="Doctor" asp-action="Index" class="menu-item">
                    <i class="fas fa-user-md"></i>
                    <span>Doctors</span>
                </a>
                <a asp-controller="Reservation" asp-action="Calendar" class="menu-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Calendar View</span>
                </a>
                <div class="menu-group">
                    <div class="menu-group-header">
                        <i class="fas fa-stethoscope"></i>
                        <span>Patient Tracking</span>
                    </div>
                    <a asp-controller="LabResult" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-flask"></i>
                        <span>Lab Results</span>
                    </a>
                    <a asp-controller="VitalSign" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-heartbeat"></i>
                        <span>Vital Signs</span>
                    </a>
                    <a asp-controller="Prescription" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-pills"></i>
                        <span>Prescriptions</span>
                    </a>
                    <a asp-controller="MedicalRecord" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-file-medical"></i>
                        <span>Medical Records</span>
                    </a>
                </div>
                <div class="menu-group">
                    <div class="menu-group-header">
                        <i class="fas fa-cog"></i>
                        <span>Management</span>
                    </div>
                    <a asp-controller="Room" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-door-open"></i>
                        <span>Rooms</span>
                    </a>
                    <a asp-controller="Bed" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-bed"></i>
                        <span>Beds</span>
                    </a>
                </div>
            }
            else if (User.IsInRole("Patient"))
            {
                <a asp-controller="Patient" asp-action="MyReservations" class="menu-item">
                    <i class="fas fa-calendar-check"></i>
                    <span>My Reservations</span>
                </a>
                <a asp-controller="Reservation" asp-action="Create" class="menu-item">
                    <i class="fas fa-plus"></i>
                    <span>New Reservation</span>
                </a>
                <div class="menu-group">
                    <div class="menu-group-header">
                        <i class="fas fa-user-injured"></i>
                        <span>My Health Records</span>
                    </div>
                    <a asp-controller="Patient" asp-action="MyLabResults" class="menu-item sub-menu">
                        <i class="bi bi-flask"></i>
                        <span>My Lab Results</span>
                    </a>
                    <a asp-controller="Patient" asp-action="MyVitalSigns" class="menu-item sub-menu">
                        <i class="bi bi-heart-pulse"></i>
                        <span>My Vital Signs</span>
                    </a>
                    <a asp-controller="Patient" asp-action="MyPrescriptions" class="menu-item sub-menu">
                        <i class="bi bi-prescription2"></i>
                        <span>My Prescriptions</span>
                    </a>
                    <a asp-controller="Patient" asp-action="MyMedicalRecords" class="menu-item sub-menu">
                        <i class="bi bi-file-medical"></i>
                        <span>My Medical Records</span>
                    </a>
                </div>
                <a asp-controller="Patient" asp-action="MyProfile" class="menu-item">
                    <i class="fas fa-user"></i>
                    <span>My Profile</span>
                </a>
            }
            else if (User.IsInRole("Doctor"))
            {
                <a asp-controller="Doctor" asp-action="MyProfile" class="menu-item">
                    <i class="fas fa-user-md"></i>
                    <span>My Profile</span>
                </a>
                <a asp-controller="Doctor" asp-action="MyReservations" class="menu-item">
                    <i class="fas fa-users"></i>
                    <span>My Patients</span>
                </a>
                <a asp-controller="Reservation" asp-action="Calendar" class="menu-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Calendar</span>
                </a>
                <div class="menu-group">
                    <div class="menu-group-header">
                        <i class="fas fa-stethoscope"></i>
                        <span>Patient Care</span>
                    </div>
                    <a asp-controller="LabResult" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-flask"></i>
                        <span>Lab Results</span>
                    </a>
                    <a asp-controller="VitalSign" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-heartbeat"></i>
                        <span>Vital Signs</span>
                    </a>
                    <a asp-controller="Prescription" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-pills"></i>
                        <span>Prescriptions</span>
                    </a>
                    <a asp-controller="MedicalRecord" asp-action="Index" class="menu-item sub-menu">
                        <i class="fas fa-file-medical"></i>
                        <span>Medical Records</span>
                    </a>
                </div>
            }
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <header class="topbar">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <button class="btn-toggle-sidebar" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="page-breadcrumb">
                        <h1 class="page-title">@ViewData["Title"]</h1>
                    </div>
                </div>
                <div class="topbar-right">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="page-content">
            @RenderBody()
        </main>
    </div>

    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-open');
        }
        
        // Auto-close sidebar on mobile when clicking menu items
        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', () => {
                if (window.innerWidth < 992) {
                    document.body.classList.remove('sidebar-open');
                }
            });
        });
        
        // Set active menu item
        const currentPath = window.location.pathname;
        document.querySelectorAll('.menu-item').forEach(item => {
            if (item.getAttribute('href') === currentPath) {
                item.classList.add('active');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
