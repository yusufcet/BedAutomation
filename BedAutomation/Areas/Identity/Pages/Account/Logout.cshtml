@page
@model LogoutModel
@{
    ViewData["Title"] = "Çıkış Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        font-family: 'Inter', sans-serif;
    }

    .auth-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        padding: 3rem;
        width: 100%;
        max-width: 450px;
        margin: 2rem;
        text-align: center;
    }

    .hospital-logo {
        margin-bottom: 2rem;
    }

    .hospital-icon {
        font-size: 3rem;
        color: #667eea;
        margin-bottom: 0.5rem;
    }

    .auth-title {
        color: #1a202c;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: #718096;
        font-size: 1rem;
        margin-bottom: 2rem;
    }

    .logout-message {
        background: #f0fff4;
        border: 1px solid #9ae6b4;
        color: #22543d;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }

    .logout-icon {
        font-size: 4rem;
        color: #48bb78;
        margin-bottom: 1rem;
    }

    .btn-logout {
        background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
        border: none;
        border-radius: 12px;
        height: 60px;
        font-weight: 600;
        font-size: 1.1rem;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(245, 101, 101, 0.3);
        width: 100%;
        margin-bottom: 1rem;
    }

    .btn-logout:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(245, 101, 101, 0.4);
        background: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
    }

    .btn-home {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 12px;
        height: 50px;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0 2rem;
    }

    .btn-home:hover {
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    @@media (max-width: 576px) {
        .auth-container {
            margin: 1rem;
            padding: 2rem;
        }
        
        .auth-title {
            font-size: 1.75rem;
        }
    }
</style>

<div class="container-fluid p-0">
    <div class="auth-container">
        <div class="hospital-logo">
            <i class="bi bi-hospital hospital-icon"></i>
            <h2 class="auth-title">BedAutomation</h2>
        </div>

        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <div>
                    <i class="bi bi-box-arrow-right logout-icon"></i>
                    <h3 class="auth-subtitle">Çıkış yapmak istediğinize emin misiniz?</h3>
                    
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-logout">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Çıkış Yap
                        </button>
                    </form>
                    
                    <a href="@Url.Page("/", new { area = "" })" class="btn-home">
                        <i class="bi bi-house me-2"></i>
                        Ana Sayfaya Dön
                    </a>
                </div>
            }
            else
            {
                <div>
                    <i class="bi bi-check-circle logout-icon"></i>
                    <div class="logout-message">
                        <strong>Başarıyla çıkış yaptınız!</strong><br>
                        Sistem güvenliği için tarayıcınızı kapatmanızı öneririz.
                    </div>
                    
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-logout" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Tekrar Giriş Yap
                    </a>
                </div>
            }
        }
    </div>
</div>
